#include <dt-bindings/zmk/matrix_transform.h> // Put this with the other includes at the top of your dtsi

/ {
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;
        map = <
        //           | LKey 2 | LKey 3 | LKey 4 | LKey 5 | LKey 6 | LKey 7 | LKey 8        RKey 1 | RKey 2 | RKey 3 | RKey 4 | RKey 5 | RKey 6
                     RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7)       RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)
        //           | LKey 10 | LKey 11 | LKey 12 | LKey 13 | LKey 14 | LKey 15 | LKey 16  RKey 7 | RKey 8 | RKey 9 | RKey 10 | RKey 11 | RKey 12
                     RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7)       RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
        //  LKey 17 | LKey 18 | LKey 19 | LKey 20 | LKey 21 | LKey 22 | LKey 23 | LKey 24  RKey 13 | RKey 14 | RKey 15 | RKey 16 | RKey 17 | RKey 18
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7)       RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
        //  LKey 25 | LKey 26 | LKey 27 | LKey 28 | LKey 29 | LKey 30 | LKey 31 | LKey 32  RKey 19 | RKey 20 | RKey 21 | RKey 22 | RKey 23 | RKey 24
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7)       RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13)
        //  LKey 33|LKey 34|LKey 35|LKey 36|LKey 37|LKey 39|LKey 40       RKey 25 | RKey 26 | RKey 27 | RKey 28 | RKey 29 | RKey 30
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)    RC(4,6) RC(4,7)       RC(4,8) RC(4,9) RC(4,10) RC(4,11) RC(4,12) RC(4,13)
        >;
    };
};
/ {
    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        kscan = <&kscan0>;
    };
};
/ {
    chosen {
        zmk,physical-layout = &default_layout;
        // Other chosen items
    };
};